<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/guess_bg">

        <EditText
            android:id="@+id/tv_zb_guessing_tittle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_user_guessing_head"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="3dp"
            android:background="#00111111"
            android:gravity="left"
            android:hint="请输入竞猜问题"
            android:paddingTop="5dp"
            android:maxLength="30"
            android:maxLines="2"
            android:textColor="#fff"
            android:textColorHint="#aaaaaa"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="25dp"
            android:text="30"
            android:textColor="#fff" />

    </RelativeLayout>

    <View
        android:id="@+id/v01"
        android:layout_width="20dp"
        android:layout_height="3dp"
        android:layout_below="@+id/rl_01"
        android:alpha="0.5"
        android:background="#111" />

    <View
        android:layout_width="20dp"
        android:layout_height="3dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_01"
        android:alpha="0.5"
        android:background="#111" />

    <LinearLayout
        android:id="@+id/ll_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v01"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#95111111">

                <TextView
                    android:id="@+id/tv_a_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="A."
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_zb_aAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/tv_a_tittle"
                    android:background="#00111111"
                    android:hint="设置选项A"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#aaaaaa"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:alpha="0.5"
                    android:background="#111" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_alignParentRight="true"
                    android:alpha="0.5"
                    android:background="#111" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#95111111">

                <TextView
                    android:id="@+id/tv_b_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="B."
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_zb_bAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/tv_b_tittle"
                    android:background="#00111111"
                    android:hint="设置选项B"
                    android:singleLine="true"
                    android:textColor="#fff"
                    android:textColorHint="#aaaaaa"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v02"
        android:layout_width="20dp"
        android:layout_height="3dp"
        android:layout_below="@+id/ll_03"
        android:alpha="0.5"
        android:background="#111" />

    <View
        android:layout_width="20dp"
        android:layout_height="3dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ll_03"
        android:alpha="0.5"
        android:background="#111" />

    <LinearLayout
        android:id="@+id/ll_07"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/v02"
        android:background="#95111111"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="封盘时间"
            android:textColor="#fff"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_zb_time"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/icon_beijing_01"
                android:gravity="center"
                android:text="1分钟"
                android:textColor="#fff" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:background="@mipmap/icon_jiantou" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ll_07"
        android:background="#95111111"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="投注池上限"
        android:textColor="#fff"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_04"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/tv_01"
        android:layout_marginTop="2dp"
        android:background="#95111111"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_zb_jianhao"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/icon_jianhao" />

        <TextView
            android:id="@+id/tv_zb_numbean"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:maxLines="1"
            android:numeric="integer"
            android:text="10000"
            android:gravity="center"
            android:textColor="#de8b3d"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_zb_jiahao"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/icon_jiahao" />

        <ImageView
            android:id="@+id/iv_yes100_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_100_bean"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_no100_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_no100_bean" />

        <ImageView
            android:id="@+id/iv_yes1000_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/icon_1000_bean"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_no1000_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/icon_no1000_bean" />

        <ImageView
            android:id="@+id/iv_yes1w_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/icon_1w_bean"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_no1w_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/icon_no1w_bean" />

        <ImageView
            android:id="@+id/iv_yes10w_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/icon_10w_bean"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_no10w_bean"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="7dp"
            android:src="@mipmap/icon_no10w_bean" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_04"
        android:background="@drawable/guess_bottom_bg">

        <LinearLayout
            android:id="@+id/ll_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_zb_guess_bean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="90000"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="充值"
                android:textColor="#25bf76" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_zb_guess"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/ll_05"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_select_bg"
            android:text="开始投注"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_guess_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_zb_guess"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="竞猜即同意《龙猫竞猜协议》"
            android:textColor="#ededed" />
    </RelativeLayout>
</RelativeLayout>