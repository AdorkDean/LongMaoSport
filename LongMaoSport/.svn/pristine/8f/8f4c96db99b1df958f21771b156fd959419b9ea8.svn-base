<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:background="@mipmap/icon_gift_bg" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_face"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_default_head"
            app:civ_border_color="@color/light_gray_color"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_face"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_gift_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_nickname"
            android:layout_below="@+id/tv_nickname"
            android:layout_marginTop="2dp"
            android:textColor="#f7d304"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/r1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="115dp" />

    <com.live.longmao.view.StrokeTextView
        android:id="@+id/txt_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/iv_gift"
        android:gravity="start"
        android:textColor="@color/light_green_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:strokeColor="@color/color51_60"
        app:strokeWidth="4" />

</RelativeLayout>