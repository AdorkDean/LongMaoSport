<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <TextView
        android:id="@+id/nicknameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="东北人"
        android:textColor="@color/light_green_color"
        android:layout_above="@+id/contentTv"
        android:textSize="@dimen/h4" />

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_barrage"
        android:layout_alignParentBottom="true"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="我是丹麦，你是谁啊，我来自大中华区"
        android:paddingRight="50dp"
        android:textColor="#f6d204"
        android:textSize="@dimen/h6" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/faceIv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_default_head"
        app:civ_border_color="@color/title_color"
        app:civ_border_width="0.5dp" />
    </RelativeLayout>

</RelativeLayout>