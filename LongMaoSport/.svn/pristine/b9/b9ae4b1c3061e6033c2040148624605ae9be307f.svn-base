<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_rank"
            android:paddingBottom="1dp"
            android:paddingLeft="8dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:text="NO.2"
            android:textColor="@color/white"
            android:textSize="@dimen/h4" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_hand"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_star_bg"
            app:civ_border_color="@color/title_color"
            app:civ_border_width="@dimen/person_one" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@mipmap/rank2" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哪里有彩虹告诉我"
                android:textSize="@dimen/h6" />

            <ImageView
                android:id="@+id/img_sex"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="2dp"
                android:background="@mipmap/global_female" />

            <ImageView
                android:id="@+id/img_level"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/rank_1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_kll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:text="贡献110卡路里"
            android:textColor="@color/color21_30"
            android:textSize="@dimen/h6" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rl_01"
        android:background="@color/back" />
</RelativeLayout>