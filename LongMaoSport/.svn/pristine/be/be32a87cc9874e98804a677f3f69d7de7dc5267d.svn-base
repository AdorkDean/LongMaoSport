<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_rank_bg"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@mipmap/icon_person_rank_one_bg" />

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="40dp"-->
            <!--android:background="@drawable/shape_rank"-->
            <!--android:paddingBottom="1dp"-->
            <!--android:paddingLeft="8dp"-->
            <!--android:paddingRight="3dp"-->
            <!--android:paddingTop="1dp"-->
            <!--android:text="NO.1"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="@dimen/h5" />-->

        <ImageView
            android:id="@+id/crown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_crown_new" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_hand"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:src="@mipmap/icon_star_bg"
            app:civ_border_color="@color/title_color"
            app:civ_border_width="@dimen/person_one" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:src="@mipmap/rank1" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="哪里有彩虹告诉我"
                android:textSize="@dimen/h6" />

            <ImageView
                android:id="@+id/img_sex"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/icon_person_girl" />

            <RelativeLayout
                android:layout_width="28dp"
                android:layout_height="14dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/copper_medal_bg"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_copper_medal"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/icon_copper_medal" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_marginRight="3dp"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="8dp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_kll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:text="贡献110卡路里"
            android:textColor="@color/color21_30"
            android:textSize="@dimen/h6" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rl_01"
        android:background="@color/back" />
</RelativeLayout>