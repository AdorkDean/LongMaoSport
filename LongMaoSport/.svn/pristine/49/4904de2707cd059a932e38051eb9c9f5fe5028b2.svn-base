    <RelativeLayout
        android:id="@+id/coin_rl_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/coin_line"
        android:background="@color/back"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/coin_rl_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/account_f"
            android:background="@color/white"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_ply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="支付方式" />

            <RadioGroup
                android:id="@+id/rg_select"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@+id/tv_ply"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_zfbpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radiobutton"
                    android:checked="true"
                    android:paddingLeft="@dimen/account_i"
                    android:text="支付宝充值" />

                <RadioButton
                    android:id="@+id/rbtn_wxpay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/radiobutton"
                    android:paddingLeft="@dimen/account_i"
                    android:text="微信支付" />
            </RadioGroup>
        </RelativeLayout>

        <Button
            android:id="@+id/coin_pay"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/coin_rl_c"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_select_bg"
            android:text="充值"
            android:textColor="@color/white"
