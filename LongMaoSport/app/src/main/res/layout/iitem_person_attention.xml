<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_attention_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/person_two" />
        <RelativeLayout
            android:layout_toRightOf="@+id/iv_attention_head"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="咻咻"
            android:textSize="@dimen/h6" />

        <ImageView
            android:id="@+id/person_sex"
            android:layout_width="@dimen/sex_width_magin"
            android:layout_height="@dimen/sex_height_magin"
            android:layout_marginLeft="@dimen/sex_left_magin"
            android:layout_toRightOf="@id/person_name"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="@dimen/sex_width_magin"
            android:layout_height="@dimen/grade_height_magin"
            android:layout_marginLeft="@dimen/grade_left_magin"
            android:layout_toRightOf="@id/person_sex"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_name"
            android:layout_alignLeft="@id/person_name"
            android:text="感谢陪伴"
            android:textSize="@dimen/item_person_attention_text_size" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/attention_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/follow_bg_select"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/attention_iv_margin" />
    </RelativeLayout>
</RelativeLayout>