<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/father"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_living_tittle_view_hight"
        android:background="#1A000000" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@mipmap/icon_star_bg"
            app:civ_border_color="@color/light_gray_color"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:id="@+id/live_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/avatar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/live_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nbs"
                    android:textColor="@color/colorGray6"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/global_male" />
                <ImageView
                    android:id="@+id/img_level"
                    android:layout_width="30dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:background="@mipmap/rank_38" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_address_black" />

                <TextView
                    android:id="@+id/live_lbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州市"
                    android:textColor="@color/colorGray4"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_num"
            android:src="@mipmap/icon_watch" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="0"
            android:textColor="@color/light_gray_color"
            android:textSize="@dimen/h6" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_living_tittle_margin_iv_rl"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_star_bg" />

        <TextView
            android:id="@+id/live_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_living_tittle_margin_right_tv"
            android:layout_marginTop="@dimen/item_living_tittle_margin_top_tv"
            android:background="@drawable/living_image"
            android:paddingBottom="@dimen/item_living_tittle_margin_padding_bottom_tv"
            android:paddingLeft="@dimen/item_living_tittle_iv_margin"
            android:paddingRight="@dimen/item_living_tittle_iv_margin"
            android:paddingTop="@dimen/item_living_tittle_margin_padding_top_tv"
            android:text="直播中"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/h6" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/icon_topic_name"
        android:drawablePadding="@dimen/item_living_tittle_drawable_padding_margin"
        android:drawableRight="@mipmap/icon_topic_name"
        android:padding="@dimen/item_living_tittle_padding_tv"
        android:text="我是一个大帅bi" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_living_tittle_view_hight"
        android:background="#1A000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_living_tittle_view_left"
        android:background="@color/back" />
</LinearLayout>